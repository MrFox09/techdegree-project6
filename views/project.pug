extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- title
        h1 #{data.project_name}

        //- project description.
        p.lead.text-light
          | #{data.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        
        ul
          each skill in data.technologies
            li #{skill}
          

        
        a.button.expanded(target ='blank', href=`${data.live_link}`) Live Demo
        a.button.expanded(target ='blank', href=`${data.github_link}`) GitHub Repo
    
    
    img.image(src=`${data.image_urls[1]}`)
    img.image(src=`${data.image_urls[2]}`)
    img.image(src=`${data.image_urls[3]}`)